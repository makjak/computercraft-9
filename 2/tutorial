function clear()
  term.clear()
  term.setCursorPos(1, 1)
end

function continue()
  io.read()
  clear()
end

term.setCursorBlink(false)
clear()
write [[





             GAMING INTO PROGRAMMING

               I'm Helena Converse
        or @n3rdgir1 on Twitter and Github

        Blog: girlbitsnbytes.wordpress.com
]]
term.setCursorPos(1, 1)
