function right()
  turtle.turnRight()
end

function left()
  turtle.turnLeft()
end

function transfer(array)
  s = 1
  for i,v in ipairs(array) do
    if not(turtle.transferTo(s,v)) then
      turtle.select(2)
      s = 1
      turtle.transferTo(s,v)
    end
  end
  turtle.select(1)
end

function suckUp()
  turtle.suckUp()
  turtle.suckUp()
end

function dropUp()
  turtle.select(1)
  turtle.dropUp()
  turtle.select(2)
  turtle.dropUp()
  turtle.select(1)
end

function suckDown()
  turtle.suckDown()
  turtle.suckDown()
end

function dropDown()
  turtle.dropDown()
  turtle.select(2)
  turtle.dropDown()
  turtle.select(1)
end

function suck()
  turtle.suck()
  turtle.suck()
end

function drop()
  turtle.drop()
  turtle.select(2)
  turtle.drop()
  turtle.select(1)
end
